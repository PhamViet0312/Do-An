@model Do_An.Models.TbMovie

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Thêm mới phim</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">General Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Thêm mới phim</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form asp-action="Create">
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="Title">Tiêu đề</label>
                                    <input asp-for="Title" class="form-control">
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Alias">Alias</label>
                                    <input asp-for="Alias" class="form-control" readonly>
                                    <span asp-validation-for="Alias" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="CategoryMovieId">Danh Mục</label>
                                    <select asp-for="CategoryMovieId" class="form-control" asp-items="ViewBag.CategoryMovieId">
                                        <option value="0" selected>[Chọn danh mục]</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Since">Năm sản xuất</label>
                                    <input asp-for="Since" class="form-control" type="number" min="1900" max="2099" step="1">
                                    <span asp-validation-for="Since" class="text-danger"></span>
                                </div>


                                <div class="form-group">
                                    <label asp-for="ReleaseDate">Ngày phát hành</label>
                                    <input asp-for="ReleaseDate" class="form-control" type="datetime-local">
                                    <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Rating">Đánh giá</label>
                                    <input asp-for="Rating" class="form-control">
                                    <span asp-validation-for="Rating" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Language">Ngôn ngữ</label>
                                    <input asp-for="Language" class="form-control">
                                    <span asp-validation-for="Language" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Image" class="control-label">Ảnh</label>
                                    <div class="input-group mb-3">
                                        <div class="input group-preprend">
                                            <button type="button" class="btn btn-success btn-round" onclick="openDialog()">Choose a picture</button>
                                        </div>
                                        <input type="text" class="form-control" id="file_input" asp-for="Image" aria-describedby="button-addon2">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Description">Mô tả</label>
                                    <textarea asp-for="Description" class="form-control"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>


                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input" asp-for="IsActive" /> Hiển thị
                                    </label>
                                </div>

                                <div class="d-flex mt-3">
                                    <div class="form-group mr-2">
                                        <button type="submit" class="btn btn-primary rounded-pill">Thêm mới</button>

                                    </div>

                                    <div class="form-group">
                                        <button type="submit" class="btn btn-danger rounded-pill mr-3" asp-action="Index">Quay Lại</button>
                                    </div>

                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@{
    var summernote = new Do_An.Areas.Admin.Models.SummerNote("#Description");
    <partial name="_SummerNote" model="summernote" />
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

